# =============================================================================
# SQL Agent Configuration
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# Database connection URI
# SQLite example:
DATABASE_URI=sqlite:///Chinook.db

# PostgreSQL example:
# DATABASE_URI=postgresql://username:password@localhost:5432/database_name

# MySQL example:
# DATABASE_URI=mysql://username:password@localhost:3306/database_name

# Database type (used in prompts and messages)
DATABASE_TYPE=SQLite

# =============================================================================
# LLM Configuration
# =============================================================================

# LLM Model to use
LLM_MODEL=gpt-4o-mini

# LLM Provider (openai, anthropic, etc.)
LLM_PROVIDER=openai

# =============================================================================
# Agent Behavior Configuration
# =============================================================================

# Enable debug mode by default (shows SQL queries)
DEBUG_MODE=false

# Enable batch execution mode by default
BATCH_MODE=true

# Maximum recursion limit for agent execution
RECURSION_LIMIT=50

# Maximum number of results to return in queries
TOP_K_RESULTS=5

# =============================================================================
# Example Configurations for Different Environments
# =============================================================================

# Development Environment
# DEBUG_MODE=true
# BATCH_MODE=true
# RECURSION_LIMIT=100
# TOP_K_RESULTS=10

# Production Environment
# DEBUG_MODE=false
# BATCH_MODE=true
# RECURSION_LIMIT=30
# TOP_K_RESULTS=5

# Testing Environment
# DEBUG_MODE=true
# BATCH_MODE=false
# RECURSION_LIMIT=20
# TOP_K_RESULTS=3
